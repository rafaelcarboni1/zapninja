{
  "name": "@zapninja/shared",
  "version": "1.0.0",
  "description": "Shared types, utilities and constants for ZAPNINJA",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "zod": "^3.22.4",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.8",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0"
  }
}
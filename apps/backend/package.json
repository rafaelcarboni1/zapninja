{
  "name": "@zapninja/backend",
  "version": "1.0.0",
  "description": "ZAPNINJA Backend - WhatsApp Bot with AI Integration",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/main.ts",
    "dev:dashboard": "tsx src/main.ts -- --dashboard",
    "build": "tsup src/main.ts src/index.ts --format esm --dts",
    "start": "npm run build && node dist/main.js",
    "start:dashboard": "npm run start -- --dashboard",
    "orchestrator": "tsx src/orchestrator/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:status": "tsx database/migrate.ts status",
    "db:migrate": "tsx database/migrate.ts migrate",
    "db:rollback": "tsx database/migrate.ts rollback",
    "db:validate": "tsx database/validate.ts validate",
    "db:fix": "tsx database/validate.ts fix",
    "db:report": "tsx database/validate.ts report",
    "db:apply": "node -e \"(async()=>{const {readFileSync}=require('fs');const {Client}=require('pg');const sql=readFileSync('apps/backend/database/schema.sql','utf8');const client=new Client({connectionString:process.env.DATABASE_URL,ssl:{rejectUnauthorized:false}});await client.connect();await client.query(sql);await client.end();console.log('Schema aplicado com sucesso');})().catch(e=>{console.error(e);process.exit(1)})\""
  },
  "dependencies": {
    "pg": "^8.12.0",
    "@google/generative-ai": "^0.21.0",
    "@supabase/supabase-js": "^2.56.1",
    "@wppconnect-team/wppconnect": "^1.35.1",
    "axios": "^1.7.7",
    "bull": "^4.16.5",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "csv-stringify": "^6.5.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "figlet": "^1.8.2",
    "inquirer": "^8.2.6",
    "openai": "^4.67.3",
    "qrcode": "^1.5.4",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.11.8",
    "@types/qrcode": "^1.5.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}